/* pages/personal/personal.wxss */
page {
	height: 100%;
}
.personalContainer {
	height: 100%;
}
.personalInfo {
	position: relative;
	width: 100%;
	height: 30%;
}
.personalInfo .register {
	width: 153rpx;
	position: absolute;
	height: 80rpx;
	top: 210rpx;
	/* left: 60rpx; */
	right: 60rpx;
	border: 2rpx solid #272343;
	border-radius: 60rpx;
	line-height: 80rpx;
	text-align: center;
	/* background-color: #ffd803; */
	background-color: #BAE8E8;
}
.personalInfo .bg {
	width: 100%;
	height: 100%;
}
.personalInfo .userImg {
	position: absolute;
	top: 110rpx;
	left: 60rpx;
	width: 100rpx;
	height: 100rpx;
	border: 1rpx soild #272343;
	border-radius: 50%;
}
.personalInfo .userNickName {
	position: absolute;
	top: 136rpx;
	font-size: 43rpx;
	left: 200rpx;
	color: #fffffe;
	font-weight: 500;
}
.content {
	position: relative;
	width: 100%;
	height: 70%;
	z-index: 1;
	background-color: #fffffe;
}
.content .wave {
	position: absolute;
	top: -16rpx;
	left: 0;
	width: 100%;
	height: 93rpx;
}
.content .personalList {
	display: flex;
	flex-direction: column;
	margin-top: 94rpx;
	position: absolute;
	width: 80%;
	height: 70%;
	justify-content: space-around;
	padding: 0 50rpx;
}
.personalList .listItem {
	width: 100%;
	height: 50rpx;
	padding: 20rpx;
	color: #272343;
	border-bottom: 1rpx solid #272343;
}
.personalList .listItem .iconfont {
	color: #ffd803;
	font-size: 58rpx;
}
