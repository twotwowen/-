/* pages/commDetail/commDetail.wxss */
page {
	height: 100%;
}
.commDetailContainer {
	height: 100%;
}
.commDetailContainer .header {
	width: 100%;
	height: 100rpx;
	line-height: 100rpx;
	text-align: center;
	font-size: 40rpx;
}
.content {
	padding: 0 20rpx;
}
.content scroll-view {
	height: calc(100vh - 200rpx);
}
.content .item {
	display: flex;
	margin-bottom: 30rpx;
}
.content .left {
	flex-direction: row;
}
.content .right {
	flex-direction: row-reverse;
}
.content .item .img {
	width: 66rpx;
	height: 66rpx;
	border: 1rpx solid #272343;
	border-radius: 50%;
}
.content .item .img image {
	width: 100%;
	height: 100%;
}
.content .left .txt {
	margin-left: 20rpx;
	background-color: #fdf6b8;
}
.content .right .txt {
	margin-right: 20rpx;
	background-color: #E3F6F5;
}
.content .txt {
	border-radius: 10px;
	display: flex;
	min-height: 25px;
	max-width: 436rpx;
	min-width: 30rpx;
	padding: 9px 10px;
	align-items: center;
	color: #272343;
	line-height: 47rpx;
}
.footer {
	justify-content: space-around;
	align-items: center;
	width: 100%;
	height: 100rpx;
	display: flex;
	position: fixed;
	bottom: 0;
	left: 0;
	background-color: #BAE8E8;
}
.footer .eip,
.footer .submit{
	width: 70rpx;
	height: 70rpx;
}
.footer image {
	width: 100%;
	height: 100%;
}
.footer input {
	border: 1rpx solid #272343;
	border-radius: 40rpx;
	width: 455rpx;
	height: 65rpx;
	padding-left: 30rpx;
}