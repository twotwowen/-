/* pages/communication/communication.wxss */
page {
	height: 100%;
}
.commContainer {
	height: 100%;
	background-color: #fffffe;
}
.header {
	position: relative;
	width: 100%;
	height: 100rpx;
	display: flex;
	padding-top: 30rpx;
}
.header .iconfont {
	left: 85rpx;
	position: absolute;
	top: 50rpx;
	font-size: 42rpx;
}
.header input {
	height: 80rpx;
	background-color: #e3f6f5;
	padding-left: 102rpx;
	border-radius: 63rpx;
	flex: 1;
	margin: 0 50rpx;
}
	
.messageList {
	margin-top: 36rpx;
}
.messageList scroll-view {
	height: calc(100vh - 166rpx);
}
.messageList .listItem {
	position: relative;
	/* width: 100%; */
	height: 130rpx;
	display: flex;
	padding-left: 45rpx;
	margin-bottom: 40rpx;
}
.messageList .listItem .img {
	width: 90rpx;
	height: 90rpx;
	border: 1rpx solid #272343;
	border-radius: 50%;
}
.listItem .point {
	width: 20rpx;
	height: 20rpx;
	background-color: blue;
	border-radius: 50%;
	position: absolute;
	top: 10rpx;
	left: 17rpx;
}
.listItem image {
	width: 100%;
	height: 100%;
}
.listItem .listItemInfo {
	width: 565rpx;
	padding-left: 20rpx;
}
.listItem .listItemInfo .nickName {
	color: #272343;
	font-size: 34rpx;
}
.listItem .listItemInfo .content {
	width: 500rpx;
	color: #544b4b;
	margin-top: 10rpx;
	overflow: hidden;
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 2;
	
}
.listItem .listItemInfo .time {
	position: absolute;
	right: 46rpx;
	top: 10rpx;
	color: #cabdbd;
	font-size: 26rpx;
}
