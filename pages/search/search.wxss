/* pages/search/search.wxss */
page {
	height: 100%;
}
.searchContainer {
	position: relative;
	height: 100%;
	padding: 0 20rpx;
	background-color: #fffffe;
	color: #272343;
}

/* 头部 */
.header {
	display: flex;
	height: 60rpx;
	line-height: 60rpx;
	padding: 26rpx 0;
}
.searchInput {
	position: relative;
	flex: 1;
	background: #E3F6F5;
	border-radius: 30rpx;
}
.searchIcon {
	position: absolute;
	top: 1rpx;
	left: 25rpx;
	font-size: 40rpx;
}
.clear {
	position: absolute;
	width: 60rpx;
	height: 60rpx;
	line-height: 60rpx;
	text-align: center;
	right: 10rpx;
	top: 0;
	font-size: 40rpx;
	z-index: 10;
}
.searchInput input {
	margin-left: 78rpx;
	height: 60rpx;
}
.placeholder {
	font-size: 28rpx;
}
/* 筛选 */
.screen {
	width: 100%;
	height: 140rpx;
	display: flex;
	justify-content: space-around;
	align-items: center;
	padding: 20rpx 0;
}
.screen .item {
	position: relative;
	width: 190rpx;
	height: 130rpx;
	background-color: #eaf0f5;
	line-height: 100rpx;
	text-align: center;
	border-radius: 40rpx;
}
.screen .item .selected {
	color: cadetblue;
	position: absolute;
	bottom: -17rpx;
	left: 0;
	right: 0;
	display: inline;
	margin: auto;
	max-width: 75rpx;
	font-size: 26rpx;
	overflow: hidden;
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 1;
}

/* 隐藏筛选项 */
.cover {
/* 	display: flex;
	justify-content: space-around; */
	position: absolute;
	left: 0;
	right: 0;
	padding: 0 20rpx;
	z-index: 2;
}
.coverOption {
	position: relative;
	display: flex;
	flex-wrap: wrap;
	width: 100%;
	height: 500rpx;
	background-color: #eaf0f5;
	border-radius: 30rpx;
}
.coverOption scroll-view {
	height: 410rpx;
}
.coverOption .optionItem {
	position: relative;
	color: cadetblue;
	width: 100%;
	height: 80rpx;
	line-height: 80rpx;
	text-align: center;
	margin-bottom: 25rpx;
	color: #3b6688;
}
.coverOption .optionItem .iconfont {
	position: absolute;
	top: 2rpx;
	left: 268rpx;
	color: #272343;
}
.coverOption .btn {
	position: absolute;
	bottom: 10rpx;
	right: 0;
	left: 0;
	margin: auto;
	width: 170rpx;
	height: 80rpx;
	line-height: 80rpx;
	text-align: center;
	border: 1rpx solid #272343;
	background-color: #ffd803;
	border-radius: 60rpx;
}

/* 列表 */
.resultList {
	width: 100%;
	display: flex;
	flex-direction: column;
	margin-top: 32rpx;
}
.resultList scroll-view {
	height: calc(100vh - 324rpx);
}
.resultList .listItem {
	position: relative;
	margin: 20rpx;
	border-bottom: 1rpx solid #e9dddd;
	height: 126rpx;
}
.resultList .listItem .title {
	font-size: 40rpx;
	max-width: 600rpx;
	margin-bottom: 30rpx;
	overflow: hidden;
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 1;
}
.resultList .listItem .count {
	position: absolute;
	right: 4rpx;
	top: 6rpx;
	font-size: 27rpx;
}
.resultList .listItem .time {
	position: absolute;
	margin: 10rpx;
	bottom: 0;
	color: #aba0a0;
	font-size: 26rpx;
}
.resultList .listItem text {
	position: absolute;
	bottom: 2px;
	right: 4rpx;
	font-size: 63rpx;
}